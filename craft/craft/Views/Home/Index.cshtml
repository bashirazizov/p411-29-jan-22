<section class="team section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3 class="wow zoomIn" data-wow-delay=".2s">Expert Team</h3>
                    <h2 class="wow fadeInUp" data-wow-delay=".4s">Meet Our Team</h2>
                    <p class="wow fadeInUp" data-wow-delay=".6s">
                        There are many variations of passages of Lorem
                        Ipsum available, but the majority have suffered alteration in some form.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Worker item in Model.workers)
            {
                <div class="col-lg-3 col-md-6 col-12 wow fadeInUp" data-wow-delay=".3s">
                    <div class="single-team">
                        <div class="team-image">
                            <img src="~/assets/images/team/@item.Image" alt="#">
                        </div>
                        <div class="content">
                            <h4>
                                @item.Fullname
                                <span>@item.Position</span>
                            </h4>
                            <ul class="social">
                                @if (!string.IsNullOrEmpty(item.Facebook))
                                {
                                    <li><a href="@item.Facebook"><i class="lni lni-facebook-filled"></i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(item.Instagram))
                                {
                                    <li><a href="@item.Instagram"><i class="lni lni-instagram"></i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(item.Twitter))
                                {
                                    <li><a href="@item.Twitter"><i class="lni lni-twitter-original"></i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(item.Linkedin))
                                {
                                    <li><a href="@item.Linkedin"><i class="lni lni-linkedin-original"></i></a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


