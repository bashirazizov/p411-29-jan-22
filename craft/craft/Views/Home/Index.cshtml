@model HomeViewModel
<section class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-12 col-12">
                <div class="hero-content">
                    <h4 class="wow fadeInUp" data-wow-delay=".2s">@Model.banner.Subtitle</h4>
                    <h1 class="wow fadeInUp" data-wow-delay=".4s">@Model.banner.Title</h1>
                    <p class="wow fadeInUp" data-wow-delay=".6s">
                        @Model.banner.Text
                    </p>
                    <div class="button wow fadeInUp" data-wow-delay=".8s">
                        <a href="@Model.banner.ButtonLink" class="btn ">@Model.banner.ButtonText</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-12">
                <div class="hero-image">
                    <img class="main-image" src="~/assets/images/hero/hero-image.png" alt="#">
                </div>
            </div>
        </div>
    </div>
</section>


<div class="services section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3 class="wow zoomIn" data-wow-delay=".2s">What we offer</h3>
                    <h2 class="wow fadeInUp" data-wow-delay=".4s">Our Services</h2>
                    <p class="wow fadeInUp" data-wow-delay=".6s">
                        There are many variations of passages of Lorem
                        Ipsum available, but the majority have suffered alteration in some form.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Service item in Model.services)
            {
                <div class="col-lg-4 col-md-6 col-12 wow fadeInUp" data-wow-delay=".2s">
                    <div class="single-service">
                        <div class="main-icon">
                            <i class="lni @item.Icon"></i>
                        </div>
                        <h4 class="text-title">@item.Title</h4>
                        <p>
                            @item.Text
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<section class="portfolio-section section" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h3 class="wow zoomIn" data-wow-delay=".2s">Case Study</h3>
                    <h2 class="wow fadeInUp" data-wow-delay=".4s">Our Latest Works</h2>
                    <p class="wow fadeInUp" data-wow-delay=".6s">
                        There are many variations of passages of Lorem
                        Ipsum available, but the majority have suffered alteration in some form.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="portfolio-btn-wrapper wow fadeInUp" data-wow-delay=".4s">
                    <button class="portfolio-btn active" data-filter="*">All</button>
                    @foreach (Category item in Model.categories)
                    {
                        <button class="portfolio-btn" data-filter=".@item.Name.ToLower().Replace(" ","-")">@item.Name</button>
                    }
                </div>
                <p class="text-center">
                    @foreach (Category item in Model.categories)
                    {
                        @*<a class="text-primary mx-4" href="/home/category?id=@item.Id">@item.Name</a>*@
                        <a class="text-primary mx-4" href="/categories/index?id=@item.Id">@item.Name</a>
                    }
                </p>
            </div>
        </div>
        <div class="row grid">
            @foreach (Project item in Model.projects)
            {
                <div class="col-lg-4 col-md-6 grid-item @item.Category.Name.ToLower().Replace(" ","-")">
                    <div class="portfolio-item-wrapper">
                        <div class="portfolio-img">
                            <img src="~/assets/images/portfolio/@item.Image" alt="">
                        </div>
                        <div class="portfolio-overlay">
                            <div class="overlay-content">
                                <span>@item.Category.Name</span>
                                <h4>@item.Title</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


